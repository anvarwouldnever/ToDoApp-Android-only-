                </View>
                <View style={styles.datenumbersborder}>
                    <Text style={styles.datenumbers}>{date - 1}</Text>
                    <Text>{day - 1 <= 0 ? day === 0? days[6] : days[day - 1] : days[day - 1]}</Text>
                </View>
